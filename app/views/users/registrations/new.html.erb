<h2>新しいアカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "必須" %>
    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", autocomplete: "name"%>
  </div>

  <div class="field">
    <%= f.label "必須" %>
    <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "必須" %>
    <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "必須" %>
    <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
  
  <%= link_to 'すでにアカウントをお持ちの方はログイン', new_user_session_path %>
<% end %>
