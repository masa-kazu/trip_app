<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "必須" %>
    <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "必須" %>
    <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  
  <%= link_to '新しいアカウントを作成', new_user_registration_path %>
  
<% end %>


